pipeline{
    agent any

    stages{
        stage('Checkout'){
            steps{
                git branch: 'main', url: 'https://github.com/GalinValchev/StudentRegistryAppDemo'
            }
        }

        stage('Install dependesies'){
            steps{
                script{
                    bat 'npm install'
                }
            }         
        }
        
        
        stage('Start application and run tests'){
            steps{
                script{
                    bat 'npm start &'
                    bat 'wait-on http://localhost:8088'
                    bat 'npm test'
                }
            }
        }
    }

    post{
        always{
            echo "CI pipeline completed"
        }
    }
}